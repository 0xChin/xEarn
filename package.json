{
  "name": "solidity-foundry-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Production ready Solidity boilerplate with Foundry",
  "homepage": "https://github.com/defi-wonderland/solidity-foundry-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/solidity-foundry-boilerplate.git"
  },
  "license": "MIT",
  "author": "Wonderland",
  "contributors": [
    "0xGorilla (https://github.com/0xGorilla)",
    "0xng (https://github.com/0xng)",
    "gas1cent (https://github.com/gas1cent)"
  ],
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "coverage": "forge coverage --match-contract Unit",
    "deploy:arbitrum": "bash -c 'source .env && forge script DeployArbitrum --rpc-url $ARBITRUM_RPC --broadcast --private-key $DEPLOYER_PK'",
    "deploy:optimism": "bash -c 'source .env && forge script DeployOptimism --rpc-url $OPTIMISM_RPC --broadcast --private-key $DEPLOYER_PK'",
    "deploy:polygon": "bash -c 'source .env && forge script DeployPolygon --rpc-url $POLYGON_RPC --broadcast --private-key $DEPLOYER_PK'",
    "postinstall": "forge install",
    "lint:check": "yarn lint:sol-tests && yarn lint:sol-logic && forge fmt check",
    "lint:fix": "sort-package-json && forge fmt && yarn lint:sol-tests --fix && yarn lint:sol-logic --fix",
    "lint:sol-logic": "cross-env solhint -c .solhint.json 'solidity/contracts/**/*.sol' 'solidity/interfaces/**/*.sol'",
    "lint:sol-tests": "cross-env solhint 'solidity/test/**/*.sol'",
    "prepare": "husky install",
    "test": "forge test -vvv",
    "test:e2e": "forge test --match-contract E2E -vvv",
    "test:unit": "forge test --match-contract Unit -vvv",
    "test:unit:deep": "FOUNDRY_FUZZ_RUNS=5000 yarn test:unit",
    "verify:arbitrum": "bash -c 'source .env && forge verify-contract 0x5f9edc657a7bFd52B183Dff8c79e66e6F64AE506 solidity/contracts/VaultManager.sol:VaultManager --watch --constructor-args 00000000000000000000000082af49447d8a07e3bd95bd0d56f35241523fbab1000000000000000000000000e592427a0aece92de3edee1f18e0157c05861564000000000000000000000000ee9dec2712cce65174b561151701bf54b99c24c800000000000000000000000000000000000000000000000000000000706f6c79 --verifier-url https://api.arbiscan.io/api --etherscan-api-key $ARBITRUM_ETHERSCAN_API_KEY'",
    "verify:optimism": "bash -c 'source .env && forge verify-contract 0x10cDb5380BE2683f9E44b16fbaA73171D5DFc568 solidity/contracts/VaultManager.sol:VaultManager --watch --constructor-args 0000000000000000000000004200000000000000000000000000000000000006000000000000000000000000e592427a0aece92de3edee1f18e0157c058615640000000000000000000000008f7492de823025b4cfaab1d34c58963f2af5deda00000000000000000000000000000000000000000000000000000000706f6c79 --chain-id 10 --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY'",
    "verify:polygon": "bash -c 'source .env && forge verify-contract 0x734245284c5b1934ca9fe7198c734db5db1264c0 solidity/contracts/xEarn.sol:XEarn --watch --constructor-args 0000000000000000000000007ceb23fd6bc0add59e62ac25578270cff1b9f61900000000000000000000000011984dc4465481512eb5b777e44061c158cf2259 --chain-id 137 --etherscan-api-key $POLYGON_ETHERSCAN_API_KEY'"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.sol": "cross-env solhint --fix 'solidity/**/*.sol",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "cross-env": "7.0.3",
    "husky": ">=8",
    "lint-staged": ">=10",
    "solhint": "3.3.6",
    "solhint-plugin-defi-wonderland": "1.1.0",
    "sort-package-json": "1.53.1"
  }
}
